@using Thinktecture.IdentityServer.Web.Areas.Admin.App_LocalResources.Protocol
@model ProtocolViewModel

@{
    ViewBag.Title = string.Format(Protocol_cshtml.ProtocolConfiguration, Model.DisplayName);
}


@using (Html.BeginForm("UpdateProtocol", "Protocol", new { id = Model.ID }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(Protocol_cshtml.ErrorUpdatingProtocol, new { @class = "alert alert-error" })
    <fieldset class="editor">
        <legend>@ViewBag.Title</legend>

        @Html.EditorFor(x => x.Protocol)

        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn btn-large btn-primary">@Protocol_cshtml.SaveChanges</button>
                <button type="reset" class="btn btn-large">@Protocol_cshtml.Cancel</button>
            </div>
        </div>
    </fieldset>
}